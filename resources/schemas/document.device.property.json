{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Document unique uuid v4 identifier"
    },
    "type": {
      "type": "string",
      "enum": [
        "variable",
        "dynamic",
        "mapped"
      ]
    },
    "category": {
      "type": "string",
      "enum": [
        "generic"
      ],
      "description": "Property category"
    },
    "identifier": {
      "type": "string",
      "description": "Unique human readable identifier"
    },
    "name": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        }
      ],
      "default": null
    },
    "data_type": {
      "type": "string",
      "enum": [
        "char",
        "uchar",
        "short",
        "ushort",
        "int",
        "uint",
        "float",
        "bool",
        "string",
        "enum",
        "color",
        "button",
        "switch",
        "date",
        "time",
        "datetime",
        "unknown"
      ]
    },
    "unit": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        }
      ],
      "default": null
    },
    "format": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "string"
                },
                {
                  "type": "array",
                  "prefixItems": [
                    {
                      "type": "string",
                      "enum": [
                        "i8",
                        "u8",
                        "i16",
                        "u16",
                        "i32",
                        "u32",
                        "f",
                        "b",
                        "s",
                        "btn",
                        "sw",
                        "cvr"
                      ]
                    },
                    {
                      "oneOf": [
                        {
                          "type": "string"
                        },
                        {
                          "type": "number"
                        },
                        {
                          "type": "boolean"
                        }
                      ]
                    }
                  ],
                  "minItems": 2,
                  "maxItems": 2
                }
              ]
            },
            "minItems": 3,
            "maxItems": 3
          }
        },
        {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "oneOf": [
              {
                "type": "null"
              },
              {
                "type": "number"
              },
              {
                "type": "array",
                "prefixItems": [
                  {
                    "type": "string",
                    "enum": [
                      "i8",
                      "u8",
                      "i16",
                      "u16",
                      "i32",
                      "u32",
                      "f"
                    ]
                  },
                  {
                    "type": "number"
                  }
                ],
                "minItems": 2,
                "maxItems": 2
              }
            ]
          },
          "minItems": 2,
          "maxItems": 2
        }
      ],
      "default": null
    },
    "invalid": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        },
        {
          "type": "number"
        }
      ],
      "default": null
    },
    "scale": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "number"
        }
      ],
      "default": null
    },
    "step": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "number"
        }
      ],
      "default": null
    },
    "value_transformer": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "uuid"
        },
        {
          "type": "string",
          "pattern": "^equation:(?:(?:x=)(?<equation_x>(?:(?:[\\d.y]?)*(?:[\\+\\-\\^\\*\\:\\/\\(\\)])*(?:\\s)*)*)){1}(?:\\|(?:(?:y=)(?<equation_y>(?:(?:[\\d.x]?)*(?:[\\+\\-\\^\\*\\:\\/\\(\\)])*(?:\\s)*)*))){0,1}$"
        }
      ],
      "default": null
    },
    "device": {
      "type": "string",
      "format": "uuid",
      "description": "Device unique uuid v4 identifier"
    },
    "owner": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "uuid"
        }
      ],
      "description": "Document owner uuid v4 identifier"
    },
    "created_at": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "date-time"
        }
      ],
      "description": "Item creation date",
      "default": null
    },
    "updated_at": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "date-time"
        }
      ],
      "description": "Item creation date",
      "default": null
    }
  },
  "if": {
    "properties": {
      "type": {
        "const": "dynamic"
      }
    }
  },
  "then": {
    "properties": {
      "children": {
        "type": "array",
        "uniqueItems": true,
        "items": {
          "type": "string",
          "format": "uuid"
        },
        "description": "Document children uuid v4 identifiers",
        "default": []
      },
      "settable": {
        "type": "boolean",
        "default": false
      },
      "queryable": {
        "type": "boolean",
        "default": false
      }
    },
    "required": [
      "id",
      "type",
      "category",
      "identifier",
      "settable",
      "queryable",
      "data_type",
      "unit",
      "format",
      "invalid",
      "scale",
      "step",
      "value_transformer",
      "device",
      "children"
    ]
  },
  "else": {
    "if": {
      "properties": {
        "type": {
          "const": "variable"
        }
      }
    },
    "then": {
      "properties": {
        "children": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "format": "uuid"
          },
          "description": "Document children uuid v4 identifiers",
          "default": []
        },
        "value": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "default": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "id",
        "type",
        "category",
        "identifier",
        "data_type",
        "unit",
        "format",
        "invalid",
        "scale",
        "step",
        "value_transformer",
        "value",
        "default",
        "device",
        "children"
      ]
    },
    "else": {
      "properties": {
        "parent": {
          "type": "string",
          "format": "uuid",
          "description": "Document parent unique uuid v4 identifier",
          "default": null
        },
        "settable": {
          "type": "boolean",
          "default": false
        },
        "queryable": {
          "type": "boolean",
          "default": false
        },
        "value": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "default": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "id",
        "type",
        "category",
        "identifier",
        "data_type",
        "unit",
        "format",
        "invalid",
        "scale",
        "step",
        "value_transformer",
        "device",
        "parent"
      ]
    }
  }
}
