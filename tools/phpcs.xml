<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../vendor/squizlabs/php_codesniffer/phpcs.xsd">
    <!-- Show only relevant part of path -->
    <arg name="basepath" value="./.."/>

    <!-- Configure cache -->
    <arg name="cache" value="./../var/tools/PHP_CodeSniffer/cache.dat"/>

    <!-- Import coding-standard -->
    <rule ref="./vendor/orisai/coding-standard/src/ruleset-8.1.xml">
        <exclude name="SlevomatCodingStandard.Commenting.ForbiddenAnnotations.AnnotationForbidden"/>

        <exclude name="SlevomatCodingStandard.Commenting.DocCommentSpacing.IncorrectLinesCountBetweenDifferentAnnotationsTypes"/>
        <exclude name="SlevomatCodingStandard.Commenting.DocCommentSpacing.IncorrectAnnotationsGroup"/>
    </rule>

    <!-- Configure PSR-4 rule -->
    <rule ref="SlevomatCodingStandard.Files.TypeNameMatchesFileName">
        <properties>
            <property name="rootNamespaces" type="array">
                <element key="src" value="FastyBird\Module\Devices"/>
                <element key="tests/cases/unit" value="FastyBird\Module\Devices\Tests\Cases\Unit"/>
                <element key="tests/fixtures" value="FastyBird\Module\Devices\Tests\Fixtures"/>
                <element key="tests/fixtures/dummy" value="FastyBird\Module\Devices\Tests\Fixtures\Dummy"/>
                <element key="tests/tools" value="FastyBird\Module\Devices\Tests\Tools"/>
            </property>
        </properties>
    </rule>

    <!--Exclude folders -->
    <exclude-pattern>/tests/stubs/*</exclude-pattern>

    <!--Exclude rules/files -->
    <rule ref="SlevomatCodingStandard.Files.LineLength.LineTooLong">
        <exclude-pattern>src/Entities/Channels/Properties/Property\.php</exclude-pattern>
        <exclude-pattern>src/Entities/Devices/Properties/Property\.php</exclude-pattern>
        <exclude-pattern>src/Entities/Property\.php</exclude-pattern>
        <exclude-pattern>src/Models/DataStorage/ChannelPropertiesRepository\.php</exclude-pattern>
        <exclude-pattern>src/Models/DataStorage/ConnectorPropertiesRepository\.php</exclude-pattern>
        <exclude-pattern>src/Models/DataStorage/DevicePropertiesRepository\.php</exclude-pattern>
        <exclude-pattern>src/Models/States/ChannelPropertiesRepository\.php</exclude-pattern>
        <exclude-pattern>src/Models/States/ChannelPropertiesManager\.php</exclude-pattern>
        <exclude-pattern>src/Models/States/DevicePropertiesRepository\.php</exclude-pattern>
        <exclude-pattern>src/Models/States/DevicePropertiesManager\.php</exclude-pattern>
        <exclude-pattern>src/Models/States/IChannelPropertiesRepository\.php</exclude-pattern>
        <exclude-pattern>src/Models/States/IChannelPropertiesManager\.php</exclude-pattern>
        <exclude-pattern>src/Models/States/IDevicePropertiesRepository\.php</exclude-pattern>
        <exclude-pattern>src/Models/States/IDevicePropertiesManager\.php</exclude-pattern>
        <exclude-pattern>src/Events/StateEntityCreated\.php</exclude-pattern>
        <exclude-pattern>src/Events/StateEntityUpdated\.php</exclude-pattern>
        <exclude-pattern>src/Events/StateEntityDeleted\.php</exclude-pattern>
        <exclude-pattern>src/Subscribers/StateEntities\.php</exclude-pattern>
        <exclude-pattern>src/Utilities/ChannelPropertiesStates\.php</exclude-pattern>
        <exclude-pattern>src/Utilities/DevicePropertiesStates\.php</exclude-pattern>
    </rule>
</ruleset>
