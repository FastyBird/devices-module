{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "declaration": true,
        "declarationDir": "dist",
        "emitDeclarationOnly": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "noImplicitAny": false,
        "types": [
            "node",
            "vue",
            "ajv",
            "@fastybird/modules-metadata",
            "@fastybird/vue-wamp-v1",
            "@fastybird/vuex-orm-wamp",
            "@types/node",
            "@types/lodash",
            "@types/uuid",
            "@vuex-orm/core",
            "@vuex-orm/plugin-axios"
        ],
        "paths": {
            "@/*": [
                "public/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
      "public/**/*"
    ],
    "exclude": [
        "node_modules",
        "vendor",
        "dist"
    ]
}
