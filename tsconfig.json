{
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "assets",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "@fastybird/metadata-library",
      "@fastybird/web-ui-library",
      "@fastybird/vue-wamp-v1",
      "@types/lodash.get",
      "@types/lodash.capitalize",
      "@types/uuid",
      "ajv",
      "date-fns",
      "jsona",
      "node",
      "natural-orderby",
      "pinia",
      "vee-validate",
      "vue",
      "vue-i18n",
      "vue-meta",
      "vue-router",
      "vue-toastification",
      "vite/client"
    ],
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "assets/**/*.ts",
    "assets/**/*.d.ts",
    "assets/**/*.vue"
  ],
  "exclude": [
    "src/**/*.stories.ts",
    "src/**/stories.ts",
    "src/**/*.spec.ts",
    "node_modules",
    "dist"
  ]
}
